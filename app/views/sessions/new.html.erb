<%= form_with url: session_url, class: "contents" do |form| %>
  <div class="py-4 w-full sm:mx-auto sm:max-w-xl shadow-md border border-1 border-gray-300
      bg-white/30 dark:bg-neutral-800/30 backdrop-blur-lg dark:border-stone-800 rounded-lg">

    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <h2 class="mt-2 text-center text-2xl/9 font-bold tracking-tight">Sign in to your account</h2>
    </div>
  
    <div class="w-full sm:mx-auto sm:max-w-md p-4 rounded-lg">
      <div class="my-5">
        <label for="email_address" class="block text-sm/6 font-medium">Email address</label>
        <div>
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email_address", placeholder: "Enter your email address", value: params[:email_address], 
              class: "rounded-md border border-1-gray-400 dark:border-1-gray-300 dark:bg-gray-700 shadow-md
              text-gray-700 dark:text-gray-100 outline-none px-4 py-2 mt-3 w-full focus:border-blue-400 
              focus:ring focus:ring-opacity-50" %>
        </div>
      </div>

      <div class="my-5">
        <div class="flex items-center justify-between">
          <label for="password" class="block text-sm/6 font-medium">Password</label>
          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path, 
                class: "font-xs text-green-600 hover:text-green-500" %>
          </div>
        </div>
        <div class="mt-1">
          <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, 
              class: "rounded-md border border-1-gray-400 dark:border-1-gray-300 dark:bg-gray-700 shadow-md
              text-gray-700 dark:text-gray-100 outline-none px-4 py-2 mt-3 w-full focus:border-blue-400 
              focus:ring focus:ring-opacity-50" %>
        </div>
      </div>

      <div class="my-5 text-white">
        <%= form.submit "Sign in", 
            class: "transition duration-300 ease-in-out border border-1 dark:border-blue-400 flex w-full justify-center 
            rounded-lg bg-indigo-600 px-4 py-3 text-sm/6 font-semibold shadow-md hover:bg-indigo-500 
            focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>

      <div class="my-5 text-white">
        <%= link_to "Cancel", root_path, 
            class: "transition duration-300 ease-in-out flex w-full justify-center rounded-lg bg-rose-500 
            px-4 py-3 text-sm/6 font-semibold border border-1 dark:border-rose-400 shadow-md hover:bg-rose-400 
            focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-rose-600" %>
      </div>
    </div>
  </div>
<% end %>
