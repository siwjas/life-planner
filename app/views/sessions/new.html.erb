<%= form_with url: session_url, class: "contents" do |form| %>
  <div class="w-full mx-4 md:mx-auto">

    <div class="flex min-h-full bg-gray-800 text-gray-100 w-full mx-2 md:mx-auto rounded-lg flex-col justify-center items-center px-6 py-12">
      <div class="py-6 px-10 bg-gray-900 shadow-md rounded-lg">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
          <h2 class="mt-5 text-center text-2xl/9 font-bold tracking-tight">Sign in to your account</h2>
        </div>
      
        <div class="sm:mx-auto sm:w-full sm:max-w-sm p-4 rounded-lg">
          <div class="my-5">
            <label for="email_address" class="block text-sm/6 font-medium">Email address</label>
            <div>
              <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email_address", placeholder: "Enter your email address", value: params[:email_address], 
                  class: "rounded-md border border-1-gray-300 bg-gray-700 text-gray-100 outline-none px-3 py-2 
                  mt-2 w-full focus:border-blue-400 focus:ring focus:ring-opacity-50" %>
            </div>
          </div>

          <div class="my-5">
            <div class="flex items-center justify-between">
              <label for="password" class="block text-sm/6 font-medium">Password</label>
              <div class="text-sm">
                <%= link_to "Forgot password?", new_password_path, 
                    class: "font-xs text-green-600 hover:text-green-500" %>
              </div>
            </div>
            <div class="mt-1">
              <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, 
                  class: "border border-1-gray-300 rounded-md bg-gray-700 text-gray-100 outline-none px-3 py-2 
                  w-full focus:border-blue-400 focus:ring focus:ring-opacity-50" %>
            </div>
          </div>

          <div class="my-5">
            <%= form.submit "Sign in", 
                class: "transition duration-300 ease-in-out border border-1-gray-300 flex w-full justify-center rounded-md bg-indigo-600 
                px-3 py-1.5 text-sm/6 font-semibold shadow-xs hover:bg-indigo-500 focus-visible:outline-2 
                focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          </div>
          <div class="my-5">
            <%= link_to "Cancel", root_path, class: "transition duration-300 ease-in-out flex w-full justify-center rounded-md bg-rose-500 
                px-3 py-1.5 text-sm/6 font-semibold border border-1-rose-300 shadow-xs hover:bg-rose-400 focus-visible:outline-2 
                focus-visible:outline-offset-2 focus-visible:outline-rose-600" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
