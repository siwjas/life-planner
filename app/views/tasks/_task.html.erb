<div id="<%= dom_id task %>" class="bg-gray-800 shadow rounded-lg px-5 py-3 my-4">

  <div class="pb-3 min-w-full flex justify-between border-b-2 border-stone-700">
    <div class="text-gray-300 block">
      <strong class="text-lg font-bold mb-1 text-gray-100">Name:</strong>
      <%= task.name %>
    </div>

    <% unless task.completed? %>
      <div class="text-gray-300 block">
        <% if task.expired? %>
          <span class="text-rose-500 animate-pulse">
            <i class="fa-solid fa-circle-exclamation fa-lg"></i>
          </span>
          <span class="<%= task.formated_deadline %>">
            <%= task.deadline %>
          </span>
        <% else %>
          <strong class="text-lg font-bold mb-1 text-gray-100">Deadline: </strong>
          <span class="<%= task.formated_deadline %>">
            <%= task.deadline %>
          </span>
        <% end %>  
      </div>
    <% end %>
  </div>

  <p class="my-5">
    <div class="text-gray-300">
      <strong class="text-lg block font-bold mb-1 text-gray-100">Description:</strong>
      <span class=" <%= task.completed? ? 'line-through': '' %>">
        <%= task.description %>
      </span>
    </div>
  </p>

  <p>
    <%= link_to "Show this task", task, 
      class: "ml-2 mt-3 rounded-lg py-3 px-5 
      bg-gray-700 text-gray-100 inline-block 
      font-medium hover:bg-gray-600" unless action_name == 'show' %>
  </p>
</div>
